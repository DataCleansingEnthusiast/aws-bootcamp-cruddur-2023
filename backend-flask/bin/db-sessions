#! /usr/bin/bash

#echo "== db-sessions"
BRed='\[\033[1;31m\]'
NO_COLOR='\033[0m'
LABEL="db-sessions"
printf "${BRed}== ${LABEL}${NO_COLOR}\n"

NO_DB_CONNECTION_URL=$(sed 's/\/cruddur//g' <<<"$CONNECTION_URL")
psql $NO_DB_CONNECTION_URL -c "select pid as process_id, \
       usename as user,  \
       datname as db, \
       client_addr, \
       application_name as app,\
       state \
from pg_stat_activity;"