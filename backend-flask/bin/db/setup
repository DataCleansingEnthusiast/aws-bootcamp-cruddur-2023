#! /usr/bin/bash
-e # stop if it fails at any point

#echo "==== db-setup"
BGreen="\[\033[1;32m\]"
NO_COLOR='\033[0m'
LABEL="db-setup"
printf "${BGreen}==== ${LABEL}${NO_COLOR}\n"

bin_path="$(realpath .)/bin"

source "$bin_path/drop"
source "$bin_path/create"
source "$bin_path/schema-load"
source "$bin_path/seed"