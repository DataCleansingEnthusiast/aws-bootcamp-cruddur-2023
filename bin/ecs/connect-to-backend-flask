#! /usr/bin/bash

if [ -z "$1" ]; then
  echo "No TASK_ID argument supplied eg ./bin/ecs/connect-to-service e9f4fe072db748e18650bb10eab29a90 backend-flask"
  exit 1 
fi
TASK_ID=$1


backend-flask


aws ecs execute-command  \
--region $AWS_DEFAULT_REGION \
--cluster cruddur \
--task $TASK_ID \
--container backend-flask \
--command "/bin/sh" \
--interactive